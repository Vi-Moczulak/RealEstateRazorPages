@page
@model RealEstate.Pages.Estates.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Estate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estate.Name" class="control-label"></label>
                <input asp-for="Estate.Name" class="form-control" />
                <span asp-validation-for="Estate.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estate.Price" class="control-label"></label>
                <input asp-for="Estate.Price" class="form-control" />
                <span asp-validation-for="Estate.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estate.BedRooms" class="control-label"></label>
                <input asp-for="Estate.BedRooms" class="form-control" />
                <span asp-validation-for="Estate.BedRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estate.BathRooms" class="control-label"></label>
                <input asp-for="Estate.BathRooms" class="form-control" />
                <span asp-validation-for="Estate.BathRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estate.SquareFeet" class="control-label"></label>
                <input asp-for="Estate.SquareFeet" class="form-control" />
                <span asp-validation-for="Estate.SquareFeet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estate.Type" class="control-label">Select estate type</label>
                <select asp-for="Estate.TypeId" class ="form-control" asp-items="@Model.TypeNameSL">
                    <option value="">-- Select Type --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
