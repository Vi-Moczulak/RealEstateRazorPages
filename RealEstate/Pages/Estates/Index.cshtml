@page
@model RealEstate.Pages.Estates.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Estates</h1>

<p>
    <a asp-page="Create">Create New Estate</a>
</p>


<form>

    <p>
        Type: <select asp-for="EstateType" asp-items="Model.Types">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        <a asp-page="./Index">Back to full List</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortField="name", asp-route-sortOrder="@Model.Order">
                    @Html.DisplayNameFor(model => model.Estate[0].Name)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortField="price", asp-route-sortOrder="@Model.Order">
                    @Html.DisplayNameFor(model => model.Estate[0].Price)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortField="bedRooms" , asp-route-sortOrder="@Model.Order">
                    @Html.DisplayNameFor(model => model.Estate[0].BedRooms)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortField="bathRooms" , asp-route-sortOrder="@Model.Order">
                    @Html.DisplayNameFor(model => model.Estate[0].BathRooms)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortField="squareFeet" , asp-route-sortOrder="@Model.Order">
                    @Html.DisplayNameFor(model => model.Estate[0].SquareFeet)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estate[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BedRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BathRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SquareFeet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
